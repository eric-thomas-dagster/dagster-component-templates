{
  "type": "dagster_component_templates.DataFrameTransformerComponent",
  "name": "DataFrame Transformer",
  "category": "transformation",
  "description": "Transform pandas DataFrames using Python code, filters, aggregations, and joins",
  "icon": "Table",
  "x-dagster-io": {
    "inputs": {
      "type": "dataframe",
      "required": true,
      "accepts_multiple": true,
      "description": "Connect DataFrame-producing assets (REST API, Database Query, CSV Ingestion)"
    },
    "outputs": {
      "type": "dataframe",
      "description": "Transformed DataFrame"
    }
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "label": "Asset Name",
      "description": "Name of this asset",
      "default": "transformed_data",
      "required": true
    },
    "filter_columns": {
      "type": "string",
      "label": "Filter Columns",
      "description": "Comma-separated list of columns to keep (optional)",
      "required": false
    },
    "drop_columns": {
      "type": "string",
      "label": "Drop Columns",
      "description": "Comma-separated list of columns to drop (optional)",
      "required": false
    },
    "rename_columns": {
      "type": "string",
      "label": "Rename Columns",
      "description": "JSON mapping of column renames: {\"old\": \"new\"}",
      "required": false
    },
    "drop_duplicates": {
      "type": "boolean",
      "label": "Drop Duplicates",
      "description": "Whether to drop duplicate rows",
      "default": false,
      "required": false
    },
    "drop_na": {
      "type": "boolean",
      "label": "Drop NA Rows",
      "description": "Whether to drop rows with NA values",
      "default": false,
      "required": false
    },
    "fill_na_value": {
      "type": "string",
      "label": "Fill NA Value",
      "description": "Value to fill NA values with (optional)",
      "required": false
    },
    "filter_expression": {
      "type": "string",
      "label": "Filter Expression",
      "description": "Pandas query expression: 'amount > 100 and status == \"active\"'",
      "required": false
    },
    "sort_by": {
      "type": "string",
      "label": "Sort By",
      "description": "Comma-separated columns to sort by (optional)",
      "required": false
    },
    "sort_ascending": {
      "type": "boolean",
      "label": "Sort Ascending",
      "description": "Sort direction",
      "default": true,
      "required": false
    },
    "group_by": {
      "type": "string",
      "label": "Group By",
      "description": "Comma-separated columns to group by (optional)",
      "required": false
    },
    "agg_functions": {
      "type": "string",
      "label": "Aggregation Functions",
      "description": "JSON mapping: {\"amount\": \"sum\", \"id\": \"count\"}",
      "required": false
    },
    "combine_method": {
      "type": "string",
      "label": "Combine Method",
      "description": "How to combine multiple DataFrames",
      "default": "concat",
      "enum": [
        "concat",
        "merge",
        "first"
      ],
      "required": false
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "label": "Group Name",
      "description": "Asset group for organization",
      "required": false
    },
    "string_operations": {
      "type": "string",
      "label": "String Operations",
      "description": "JSON list of operations: [{\"column\": \"name\", \"operation\": \"upper\"}]. Operations: upper, lower, trim, strip, title",
      "required": false
    },
    "string_replace": {
      "type": "string",
      "label": "String Replace",
      "description": "JSON mapping: {\"column_name\": {\"old\": \"new\", \"pattern\": \"replacement\"}}",
      "required": false
    },
    "calculated_columns": {
      "type": "string",
      "label": "Calculated Columns",
      "description": "JSON mapping: {\"new_col\": \"price * quantity\", \"full_name\": \"first_name + ' ' + last_name\"}",
      "required": false
    },
    "pivot_config": {
      "type": "string",
      "label": "Pivot Configuration",
      "description": "JSON config: {\"index\": \"date\", \"columns\": \"category\", \"values\": \"amount\", \"aggfunc\": \"sum\"}",
      "required": false
    },
    "unpivot_config": {
      "type": "string",
      "label": "Unpivot Configuration",
      "description": "JSON config: {\"id_vars\": [\"id\", \"name\"], \"value_vars\": [\"q1\", \"q2\"], \"var_name\": \"quarter\", \"value_name\": \"sales\"}",
      "required": false
    }
  },
  "tags": [
    "transformation",
    "data-processing"
  ]
}