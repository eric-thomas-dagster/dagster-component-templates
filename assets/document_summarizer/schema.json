{
  "type": "dagster_component_templates.DocumentSummarizerComponent",
  "name": "Document Summarizer",
  "category": "ai",
  "description": "Summarize documents using LLMs with customizable prompts and chunking strategies",
  "icon": "FileText",
  "x-dagster-io": {
    "inputs": {
      "type": "text",
      "description": "Accepts text from upstream assets via IO manager. Compatible with string, dict with 'text' key, or any text-producing asset (Document Text Extractor, Text Chunker, etc.).",
      "required": true
    },
    "outputs": {
      "type": "text",
      "description": "Produces summarized text string based on specified summary_type (concise, detailed, bullet_points, or executive). Output can be consumed by downstream text processing assets."
    }
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "default": "document_summary",
      "required": true
    },
    "provider": {
      "type": "string",
      "default": "openai",
      "enum": [
        "openai",
        "anthropic"
      ],
      "required": true
    },
    "model": {
      "type": "string",
      "default": "gpt-4",
      "required": true
    },
    "summary_type": {
      "type": "string",
      "default": "concise",
      "enum": [
        "concise",
        "detailed",
        "bullet_points",
        "executive"
      ],
      "required": false
    },
    "max_length": {
      "type": "integer",
      "required": false
    },
    "chunk_size": {
      "type": "integer",
      "default": 3000,
      "required": false
    },
    "use_map_reduce": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "api_key": {
      "type": "string",
      "description": "API key (use ${VAR_NAME} for environment variable)",
      "required": false
    },
    "temperature": {
      "type": "number",
      "default": 0.3,
      "required": false
    },
    "description": {
      "type": "string",
      "required": false
    },
    "group_name": {
      "type": "string",
      "required": false
    }
  },
  "tags": [
    "ai",
    "llm",
    "nlp"
  ]
}