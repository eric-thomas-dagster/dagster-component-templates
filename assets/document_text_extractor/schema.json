{
  "type": "dagster_component_templates.DocumentTextExtractorComponent",
  "name": "Document Text Extractor",
  "category": "transformation",
  "description": "Extract text content from PDF, Word, HTML, and other document formats",
  "icon": "FileSearch",
  "x-dagster-io": {
    "inputs": {
      "type": "run_config",
      "required": true,
      "description": "File path must be provided via RunConfig (ideal for sensors) or upstream asset. RunConfig format: {\"ops\": {\"asset_name\": {\"config\": {\"file_path\": \"/path/to/file.pdf\"}}}}. This allows sensors to dynamically pass file paths discovered at runtime.",
      "run_config_key": "file_path",
      "alternative": "Can also accept file_path from upstream asset (string or dict with 'file_path' key)"
    },
    "outputs": {
      "type": "text",
      "description": "Extracted text string (output_format='text'), dict with text and metadata (output_format='json'), or markdown formatted text (output_format='markdown')",
      "conditional": true,
      "condition": "Based on output_format parameter"
    }
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "label": "Asset Name",
      "description": "Name of the asset",
      "default": "extracted_text",
      "required": true
    },
    "extraction_method": {
      "type": "string",
      "label": "Extraction Method",
      "description": "Method to use for extraction",
      "default": "auto",
      "enum": [
        "auto",
        "pypdf",
        "pdfplumber",
        "pytesseract",
        "docx",
        "html",
        "markdown",
        "text"
      ],
      "required": false
    },
    "ocr_enabled": {
      "type": "boolean",
      "label": "Enable OCR",
      "description": "Enable OCR for scanned documents",
      "default": false,
      "required": false
    },
    "preserve_formatting": {
      "type": "boolean",
      "label": "Preserve Formatting",
      "description": "Preserve document formatting",
      "default": false,
      "required": false
    },
    "extract_metadata": {
      "type": "boolean",
      "label": "Extract Metadata",
      "description": "Extract document metadata",
      "default": true,
      "required": false
    },
    "page_range": {
      "type": "string",
      "label": "Page Range",
      "description": "Page range for PDFs (e.g., '1-5')",
      "required": false
    },
    "output_format": {
      "type": "string",
      "label": "Output Format",
      "description": "Format of extracted text",
      "default": "text",
      "enum": [
        "text",
        "json",
        "markdown"
      ],
      "required": false
    },
    "save_to_file": {
      "type": "boolean",
      "label": "Save to File",
      "description": "Save extracted text to file",
      "default": false,
      "required": false
    },
    "output_path": {
      "type": "string",
      "label": "Output Path",
      "description": "Path to save extracted text",
      "required": false
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "label": "Group Name",
      "description": "Asset group for organization",
      "required": false
    }
  },
  "tags": [
    "transformation",
    "data-processing"
  ]
}