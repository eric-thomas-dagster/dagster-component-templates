{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "asset_name": {
      "type": "string",
      "title": "Asset Name",
      "description": "Name of the asset to create"
    },
    "database_path": {
      "type": "string",
      "title": "Database Path",
      "description": "Path to the DuckDB database file"
    },
    "query": {
      "type": "string",
      "title": "SQL Query",
      "description": "SQL query to execute (SELECT statement)"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Description of the asset",
      "default": ""
    },
    "group_name": {
      "type": "string",
      "title": "Group Name",
      "description": "Asset group name for organization",
      "default": ""
    }
  },
  "required": ["asset_name", "database_path", "query"]
}
