{
  "type": "dagster_component_templates.EntityExtractorComponent",
  "name": "Entity Extractor",
  "category": "ai",
  "description": "Extract named entities (people, organizations, locations) from text using NLP",
  "icon": "Tag",
  "attributes": {
    "asset_name": {
      "type": "string",
      "description": "Name of the asset that will hold extracted entities",
      "required": true
    },
    "method": {
      "type": "string",
      "description": "Extraction method",
      "default": "spacy",
      "enum": [
        "llm",
        "spacy",
        "transformer"
      ],
      "required": false
    },
    "llm_provider": {
      "type": "string",
      "description": "LLM provider (required for method=llm)",
      "enum": [
        "openai",
        "anthropic"
      ],
      "required": false
    },
    "llm_model": {
      "type": "string",
      "description": "LLM model name (required for method=llm)",
      "required": false
    },
    "spacy_model": {
      "type": "string",
      "description": "spaCy model name (for method=spacy)",
      "required": false
    },
    "transformer_model": {
      "type": "string",
      "description": "Transformer NER model (for method=transformer)",
      "required": false
    },
    "api_key": {
      "type": "string",
      "description": "API key for LLM method",
      "required": false
    },
    "input_column": {
      "type": "string",
      "description": "Column name containing text to extract entities from",
      "default": "text",
      "required": false
    },
    "entity_types": {
      "type": "string",
      "description": "Comma-separated list of entity types to extract",
      "default": "person,organization,location,email,phone,product,order_id,date,money",
      "required": false
    },
    "custom_entities": {
      "type": "string",
      "description": "JSON string of custom entity patterns: {\"type\": [\"pattern1\", \"pattern2\"]}",
      "required": false
    },
    "output_format": {
      "type": "string",
      "description": "Output format: structured (dict per row) or flat (one column per entity type)",
      "default": "structured",
      "enum": [
        "structured",
        "flat"
      ],
      "required": false
    },
    "link_entities": {
      "type": "boolean",
      "description": "Enable entity linking/resolution (LLM only)",
      "default": false,
      "required": false
    },
    "include_confidence": {
      "type": "boolean",
      "description": "Include confidence scores for entities",
      "default": true,
      "required": false
    },
    "include_spans": {
      "type": "boolean",
      "description": "Include character span positions (start, end)",
      "default": false,
      "required": false
    },
    "deduplicate": {
      "type": "boolean",
      "description": "Remove duplicate entities within the same text",
      "default": true,
      "required": false
    },
    "batch_size": {
      "type": "integer",
      "description": "Batch size for processing",
      "default": 32,
      "minimum": 1,
      "required": false
    },
    "temperature": {
      "type": "number",
      "description": "Temperature for LLM (0.0 = deterministic)",
      "default": 0.0,
      "minimum": 0.0,
      "maximum": 2.0,
      "required": false
    },
    "max_tokens": {
      "type": "integer",
      "description": "Max tokens for LLM response",
      "default": 500,
      "required": false
    },
    "rate_limit_delay": {
      "type": "number",
      "description": "Delay in seconds between API calls",
      "default": 0.1,
      "minimum": 0.0,
      "required": false
    },
    "max_retries": {
      "type": "integer",
      "description": "Maximum retries for failed API calls",
      "default": 3,
      "minimum": 0,
      "required": false
    },
    "track_costs": {
      "type": "boolean",
      "description": "Track token usage and costs (LLM only)",
      "default": true,
      "required": false
    },
    "description": {
      "type": "string",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "description": "Asset group for organization",
      "default": "entity_extraction",
      "required": false
    },
    "include_sample_metadata": {
      "type": "boolean",
      "description": "Include sample data preview in metadata",
      "default": true,
      "required": false
    }
  },
  "tags": [
    "ai",
    "llm",
    "nlp"
  ]
}