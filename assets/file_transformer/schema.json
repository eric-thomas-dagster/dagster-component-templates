{
  "type": "dagster_component_templates.FileTransformerComponent",
  "name": "File Transformer",
  "category": "transformation",
  "description": "Transform files using custom Python code or built-in operations",
  "icon": "FileCode",
  "attributes": {
    "asset_name": {
      "type": "string",
      "label": "Asset Name",
      "description": "Name of the asset",
      "default": "transform_file",
      "required": true
    },
    "input_file_path": {
      "type": "string",
      "label": "Input File Path",
      "description": "Fixed input file path (optional, can use run_config instead)",
      "required": false
    },
    "input_format": {
      "type": "string",
      "label": "Input Format",
      "description": "Input file format",
      "default": "auto",
      "enum": [
        "auto",
        "csv",
        "json",
        "parquet",
        "excel"
      ],
      "required": false
    },
    "output_format": {
      "type": "string",
      "label": "Output Format",
      "description": "Output file format",
      "default": "parquet",
      "enum": [
        "csv",
        "json",
        "parquet",
        "excel"
      ],
      "required": true
    },
    "output_directory": {
      "type": "string",
      "label": "Output Directory",
      "description": "Directory to write transformed files",
      "default": "/data/processed",
      "required": true
    },
    "output_filename": {
      "type": "string",
      "label": "Output Filename",
      "description": "Output filename (optional)",
      "required": false
    },
    "csv_delimiter": {
      "type": "string",
      "label": "CSV Delimiter",
      "description": "CSV delimiter character",
      "default": ",",
      "required": false
    },
    "csv_encoding": {
      "type": "string",
      "label": "CSV Encoding",
      "description": "CSV file encoding",
      "default": "utf-8",
      "required": false
    },
    "json_orient": {
      "type": "string",
      "label": "JSON Orientation",
      "description": "JSON orientation",
      "default": "records",
      "enum": [
        "records",
        "split",
        "index",
        "columns",
        "values"
      ],
      "required": false
    },
    "excel_sheet_name": {
      "type": "string",
      "label": "Excel Sheet Name",
      "description": "Excel sheet name",
      "default": "Sheet1",
      "required": false
    },
    "parquet_compression": {
      "type": "string",
      "label": "Parquet Compression",
      "description": "Parquet compression",
      "default": "snappy",
      "enum": [
        "snappy",
        "gzip",
        "brotli",
        "None"
      ],
      "required": false
    },
    "drop_duplicates": {
      "type": "boolean",
      "label": "Drop Duplicates",
      "description": "Whether to drop duplicate rows",
      "default": false,
      "required": false
    },
    "fill_na_value": {
      "type": "string",
      "label": "Fill NA Value",
      "description": "Value to fill NaN values with",
      "required": false
    },
    "columns_to_keep": {
      "type": "string",
      "label": "Columns to Keep",
      "description": "Comma-separated list of columns to keep",
      "required": false
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "label": "Group Name",
      "description": "Asset group for organization",
      "required": false
    }
  },
  "tags": [
    "transformation",
    "data-processing"
  ]
}