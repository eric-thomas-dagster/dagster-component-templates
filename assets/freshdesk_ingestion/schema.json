{
  "type": "dagster_component_templates.FreshdeskIngestionComponent",
  "name": "Freshdesk Ingestion",
  "category": "cdp",
  "description": "Ingest Freshdesk support tickets and customer service data using dlt.",
  "version": "1.0.0",
  "author": "Dagster Community",
  "icon": "LifeBuoy",
  "x-dagster-io": {
    "inputs": {
      "type": "none",
      "required": false
    },
    "outputs": {
      "type": "dataframe",
      "description": "Freshdesk data as pandas DataFrame for downstream transformation"
    },
    "supports_partitions": false
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "required": true,
      "label": "Asset Name",
      "description": "Name of the asset",
      "placeholder": "freshdesk_support_data"
    },
    "api_key": {
      "type": "string",
      "required": true,
      "label": "API Key",
      "description": "Freshdesk API key for authentication",
      "placeholder": "${FRESHDESK_API_KEY}",
      "secret": true
    },
    "domain": {
      "type": "string",
      "required": true,
      "label": "Domain",
      "description": "Your Freshdesk domain (e.g., yourcompany.freshdesk.com)",
      "placeholder": "yourcompany.freshdesk.com"
    },
    "resources": {
      "type": "array",
      "required": false,
      "label": "Resources",
      "description": "Freshdesk resources to extract",
      "default": ["tickets", "contacts", "companies", "agents"],
      "items": {
        "type": "string",
        "enum": ["tickets", "contacts", "companies", "agents"]
      }
    },
    "description": {
      "type": "string",
      "required": false,
      "label": "Description",
      "description": "Asset description",
      "placeholder": "Freshdesk support tickets and customer service data"
    },
    "group_name": {
      "type": "string",
      "required": false,
      "label": "Group Name",
      "description": "Asset group for organization",
      "default": "freshdesk",
      "placeholder": "freshdesk"
    },
    "include_sample_metadata": {
      "type": "boolean",
      "required": false,
      "label": "Include Sample Metadata",
      "description": "Include data preview in metadata",
      "default": true
    }
  },
  "dependencies": {
    "pip": ["dlt[freshdesk]>=0.4.0", "pandas>=1.5.0"]
  },
  "tags": ["cdp", "support", "freshdesk", "tickets", "customer-service", "dlt", "ingestion"]
}
