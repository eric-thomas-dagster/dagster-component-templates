{
  "type": "dagster_component_templates.LLMChainExecutorComponent",
  "name": "LLM Chain",
  "category": "ai",
  "description": "Execute multi-step LLM chains with memory and context passing",
  "icon": "Workflow",
  "x-dagster-io": {
    "description": "This component receives context data from upstream assets via IO managers and outputs chain execution results",
    "inputs": {
      "upstream_context": {
        "description": "Context data from upstream assets (document extractors, database queries, API fetchers, file readers, etc.)",
        "expected_format": "String, dict, or DataFrame - all data becomes template variables",
        "required": true,
        "compatible_components": [
          "DocumentTextExtractorComponent",
          "DatabaseQueryComponent",
          "RestApiFetcherComponent",
          "TextFileReaderComponent",
          "LLMPromptExecutorComponent"
        ]
      }
    },
    "outputs": {
      "chain_results": {
        "description": "Dictionary containing all chain step outputs with their output_keys",
        "format": "Dict with keys matching output_key values from chain_steps",
        "compatible_components": [
          "LLMOutputParserComponent",
          "LLMChainExecutorComponent",
          "TextFileWriterComponent",
          "DatabaseInsertComponent"
        ]
      }
    }
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "default": "chain_output",
      "required": true
    },
    "provider": {
      "type": "string",
      "default": "openai",
      "enum": [
        "openai",
        "anthropic"
      ],
      "required": true
    },
    "model": {
      "type": "string",
      "default": "gpt-4",
      "required": true
    },
    "chain_steps": {
      "type": "string",
      "description": "JSON array of chain steps",
      "required": true
    },
    "initial_context": {
      "type": "string",
      "description": "Initial context as JSON",
      "required": false
    },
    "temperature": {
      "type": "number",
      "default": 0.7,
      "required": false
    },
    "api_key": {
      "type": "string",
      "description": "API key (use ${VAR_NAME} for environment variable)",
      "required": false
    },
    "description": {
      "type": "string",
      "required": false
    },
    "group_name": {
      "type": "string",
      "required": false
    }
  },
  "tags": [
    "ai",
    "llm",
    "nlp"
  ]
}