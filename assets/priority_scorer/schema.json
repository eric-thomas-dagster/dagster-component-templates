{
  "type": "dagster_component_templates.PriorityScorerComponent",
  "name": "Priority Scorer",
  "category": "ml",
  "description": "Score and prioritize items using custom rules or ML models",
  "icon": "Star",
  "attributes": {
    "asset_name": {
      "type": "string",
      "description": "Name of the asset that will hold prioritized ticket data",
      "required": true
    },
    "method": {
      "type": "string",
      "description": "Scoring method",
      "default": "rules",
      "enum": [
        "llm",
        "ml",
        "rules"
      ],
      "required": false
    },
    "llm_provider": {
      "type": "string",
      "description": "LLM provider (required for method=llm)",
      "enum": [
        "openai",
        "anthropic"
      ],
      "required": false
    },
    "llm_model": {
      "type": "string",
      "description": "LLM model name (required for method=llm)",
      "required": false
    },
    "ml_model": {
      "type": "string",
      "description": "ML model type (for method=ml)",
      "enum": [
        "logistic_regression",
        "xgboost",
        "random_forest"
      ],
      "required": false
    },
    "api_key": {
      "type": "string",
      "description": "API key for LLM method",
      "required": false
    },
    "input_columns": {
      "type": "string",
      "description": "Comma-separated list of columns to use for scoring",
      "default": "ticket_text",
      "required": false
    },
    "priority_levels": {
      "type": "string",
      "description": "Comma-separated priority levels or 'numeric' for 0-100 scores",
      "default": "P1,P2,P3,P4",
      "required": false
    },
    "sla_hours": {
      "type": "string",
      "description": "JSON dict mapping customer tier to SLA hours",
      "required": false
    },
    "customer_tier_column": {
      "type": "string",
      "description": "Column name for customer tier",
      "required": false
    },
    "sentiment_score_column": {
      "type": "string",
      "description": "Column name for sentiment score",
      "required": false
    },
    "urgency_column": {
      "type": "string",
      "description": "Column name for urgency level",
      "required": false
    },
    "escalation_threshold": {
      "type": "number",
      "description": "Priority score threshold for escalation",
      "default": 80.0,
      "minimum": 0.0,
      "maximum": 100.0,
      "required": false
    },
    "predict_sla_breach": {
      "type": "boolean",
      "description": "Predict if ticket will breach SLA",
      "default": true,
      "required": false
    },
    "include_explanation": {
      "type": "boolean",
      "description": "Include explanation of priority score factors",
      "default": true,
      "required": false
    },
    "tier_weights": {
      "type": "string",
      "description": "JSON dict of tier weight multipliers",
      "required": false
    },
    "urgency_weights": {
      "type": "string",
      "description": "JSON dict of urgency weight multipliers",
      "required": false
    },
    "batch_size": {
      "type": "integer",
      "description": "Batch size for processing",
      "default": 50,
      "minimum": 1,
      "required": false
    },
    "temperature": {
      "type": "number",
      "description": "Temperature for LLM",
      "default": 0.0,
      "minimum": 0.0,
      "maximum": 2.0,
      "required": false
    },
    "max_tokens": {
      "type": "integer",
      "description": "Max tokens for LLM response",
      "default": 300,
      "required": false
    },
    "rate_limit_delay": {
      "type": "number",
      "description": "Delay in seconds between API calls",
      "default": 0.1,
      "minimum": 0.0,
      "required": false
    },
    "max_retries": {
      "type": "integer",
      "description": "Maximum retries for failed API calls",
      "default": 3,
      "minimum": 0,
      "required": false
    },
    "track_costs": {
      "type": "boolean",
      "description": "Track token usage and costs (LLM only)",
      "default": true,
      "required": false
    },
    "description": {
      "type": "string",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "description": "Asset group for organization",
      "default": "priority_scoring",
      "required": false
    },
    "include_sample_metadata": {
      "type": "boolean",
      "description": "Include sample data preview in metadata",
      "default": true,
      "required": false
    }
  },
  "tags": [
    "ml"
  ]
}