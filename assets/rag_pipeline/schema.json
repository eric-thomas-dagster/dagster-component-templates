{
  "type": "dagster_component_templates.RAGPipelineComponent",
  "name": "RAG Pipeline",
  "category": "ai",
  "description": "Retrieval-augmented generation pipeline for question answering with vector stores",
  "icon": "BookOpen",
  "x-dagster-io": {
    "inputs": {
      "type": "any",
      "required": false,
      "description": "Accepts query from upstream asset via IO manager. Compatible types: string (query text directly) or dict with 'query' or 'text' key containing the query. Optional if query parameter is provided in configuration."
    },
    "outputs": {
      "type": "dict",
      "description": "Returns dict with keys: 'response' (generated answer), 'query' (original query text), 'num_sources' (count of retrieved documents), and optionally 'sources' (list of source documents with text and metadata if include_sources is true)"
    }
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "default": "rag_response",
      "required": true
    },
    "vector_store_provider": {
      "type": "string",
      "default": "chromadb",
      "enum": [
        "chromadb",
        "pinecone",
        "qdrant"
      ],
      "required": true
    },
    "collection_name": {
      "type": "string",
      "default": "documents",
      "required": true
    },
    "llm_provider": {
      "type": "string",
      "default": "openai",
      "enum": [
        "openai",
        "anthropic"
      ],
      "required": true
    },
    "llm_model": {
      "type": "string",
      "default": "gpt-4",
      "required": true
    },
    "embedding_provider": {
      "type": "string",
      "default": "openai",
      "required": false
    },
    "embedding_model": {
      "type": "string",
      "default": "text-embedding-3-small",
      "required": false
    },
    "top_k": {
      "type": "integer",
      "default": 5,
      "required": false
    },
    "vector_store_connection": {
      "type": "string",
      "required": false
    },
    "llm_api_key": {
      "type": "string",
      "description": "LLM API key (use ${VAR_NAME} for environment variable)",
      "required": false
    },
    "embedding_api_key": {
      "type": "string",
      "description": "Embedding API key (use ${VAR_NAME} for environment variable)",
      "required": false
    },
    "include_sources": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "temperature": {
      "type": "number",
      "default": 0.7,
      "required": false
    },
    "description": {
      "type": "string",
      "required": false
    },
    "group_name": {
      "type": "string",
      "required": false
    }
  },
  "tags": [
    "ai",
    "llm",
    "nlp"
  ]
}