{
  "type": "dagster_component_templates.RestApiFetcherComponent",
  "name": "REST API Fetcher",
  "category": "extraction",
  "description": "Fetch data from REST APIs with pagination, authentication, and retry logic",
  "icon": "Cloud",
  "x-dagster-io": {
    "outputs": {
      "type": "dataframe",
      "conditional": true,
      "condition": "output_format == 'dataframe'",
      "description": "Produces DataFrame when output_format is set to 'dataframe'"
    },
    "supports_partitions": true,
    "supported_partition_types": [
      "daily",
      "weekly",
      "monthly",
      "hourly"
    ]
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "label": "Asset Name",
      "description": "Name of the asset",
      "default": "api_data",
      "required": true
    },
    "api_url": {
      "type": "string",
      "label": "API URL",
      "description": "URL of the API endpoint to fetch data from",
      "default": "https://api.example.com/data",
      "required": true
    },
    "method": {
      "type": "string",
      "label": "HTTP Method",
      "description": "HTTP method to use",
      "default": "GET",
      "enum": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH"
      ],
      "required": false
    },
    "headers": {
      "type": "string",
      "label": "HTTP Headers",
      "description": "JSON string of HTTP headers",
      "default": "{}",
      "required": false
    },
    "params": {
      "type": "string",
      "label": "Query Parameters",
      "description": "JSON string of query parameters",
      "default": "{}",
      "required": false
    },
    "body": {
      "type": "string",
      "label": "Request Body",
      "description": "JSON string of request body for POST/PUT requests",
      "required": false
    },
    "auth_type": {
      "type": "string",
      "label": "Authentication Type",
      "description": "Type of authentication",
      "default": "",
      "enum": [
        "",
        "basic",
        "bearer"
      ],
      "required": false
    },
    "auth_username": {
      "type": "string",
      "label": "Auth Username",
      "description": "Username for basic authentication",
      "required": false
    },
    "auth_password": {
      "type": "string",
      "label": "Auth Password",
      "description": "Password for basic authentication",
      "required": false
    },
    "auth_token": {
      "type": "string",
      "label": "Bearer Token",
      "description": "Bearer token for authentication",
      "required": false
    },
    "timeout": {
      "type": "integer",
      "label": "Timeout (seconds)",
      "description": "Request timeout in seconds",
      "default": 30,
      "minimum": 1,
      "required": false
    },
    "output_format": {
      "type": "string",
      "label": "Output Format",
      "description": "Format of the output data",
      "default": "json",
      "enum": [
        "json",
        "dataframe",
        "csv",
        "parquet"
      ],
      "required": false
    },
    "json_path": {
      "type": "string",
      "label": "JSON Path",
      "description": "JSON path to extract data from response (e.g., 'data.results')",
      "required": false
    },
    "cache_results": {
      "type": "boolean",
      "label": "Cache Results",
      "description": "Whether to cache results locally",
      "default": false,
      "required": false
    },
    "cache_path": {
      "type": "string",
      "label": "Cache Path",
      "description": "Path to cache file",
      "required": false
    },
    "verify_ssl": {
      "type": "boolean",
      "label": "Verify SSL",
      "description": "Whether to verify SSL certificates",
      "default": true,
      "required": false
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "label": "Group Name",
      "description": "Asset group for organization",
      "required": false
    }
  },
  "tags": [
    "extraction",
    "ingestion",
    "data-source"
  ]
}