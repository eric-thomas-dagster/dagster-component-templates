{
  "type": "dagster_component_templates.TextChunkerComponent",
  "name": "Text Chunker",
  "category": "ai",
  "description": "Split text into chunks using fixed size, sentence, paragraph, or semantic strategies",
  "icon": "Scissors",
  "x-dagster-io": {
    "inputs": {
      "type": "text",
      "description": "Accepts text from upstream assets via IO manager. Compatible with string, dict with 'text' key, or any text-producing asset (Document Text Extractor, Document Summarizer, etc.).",
      "required": true
    },
    "outputs": {
      "type": "variable",
      "description": "Produces list of chunks (output_format='list'), DataFrame with chunk metadata including chunk, index, start_pos, end_pos, length (output_format='dataframe'), or JSON (output_format='json')",
      "conditional": "Based on output_format parameter"
    }
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "label": "Asset Name",
      "description": "Name of the asset",
      "default": "text_chunks",
      "required": true
    },
    "chunking_strategy": {
      "type": "string",
      "label": "Chunking Strategy",
      "description": "Strategy for chunking",
      "default": "fixed_chars",
      "enum": [
        "fixed_chars",
        "fixed_tokens",
        "sentence",
        "paragraph",
        "semantic",
        "recursive"
      ],
      "required": false
    },
    "chunk_size": {
      "type": "integer",
      "label": "Chunk Size",
      "description": "Target size of each chunk",
      "default": 1000,
      "minimum": 10,
      "required": false
    },
    "chunk_overlap": {
      "type": "integer",
      "label": "Chunk Overlap",
      "description": "Overlap between chunks",
      "default": 200,
      "minimum": 0,
      "required": false
    },
    "separator": {
      "type": "string",
      "label": "Separator",
      "description": "Custom separator for recursive strategy",
      "required": false
    },
    "preserve_sentences": {
      "type": "boolean",
      "label": "Preserve Sentences",
      "description": "Try not to break sentences",
      "default": true,
      "required": false
    },
    "add_metadata": {
      "type": "boolean",
      "label": "Add Metadata",
      "description": "Add metadata to chunks",
      "default": true,
      "required": false
    },
    "output_format": {
      "type": "string",
      "label": "Output Format",
      "description": "Format of output",
      "default": "list",
      "enum": [
        "list",
        "dataframe",
        "json"
      ],
      "required": false
    },
    "save_to_file": {
      "type": "boolean",
      "label": "Save to File",
      "description": "Save chunks to file",
      "default": false,
      "required": false
    },
    "output_path": {
      "type": "string",
      "label": "Output Path",
      "description": "Path to save chunks",
      "required": false
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "label": "Group Name",
      "description": "Asset group for organization",
      "required": false
    }
  },
  "tags": [
    "ai",
    "llm",
    "nlp"
  ]
}