{
  "type": "dagster_component_templates.TextClassifierComponent",
  "name": "Text Classifier",
  "category": "ai",
  "description": "Classify text into categories using LLMs or ML models",
  "icon": "Tag",
  "x-dagster-io": {
    "inputs": {
      "type": "text",
      "description": "Accepts text from upstream assets via IO manager. Compatible with string, dict with 'text' key, or any text-producing asset (Document Text Extractor, Document Summarizer, Text Chunker, etc.).",
      "required": true
    },
    "outputs": {
      "type": "dict",
      "description": "Produces dict with classification results including 'category' (string), 'confidence' (float, if include_confidence=true), and 'reasoning' (string, if include_reasoning=true). Output can be consumed by downstream assets via IO manager."
    }
  },
  "attributes": {
    "asset_name": {
      "type": "string",
      "default": "text_classification",
      "required": true
    },
    "provider": {
      "type": "string",
      "default": "openai",
      "enum": [
        "openai",
        "anthropic"
      ],
      "required": true
    },
    "model": {
      "type": "string",
      "default": "gpt-4",
      "required": true
    },
    "categories": {
      "type": "string",
      "required": true
    },
    "classification_task": {
      "type": "string",
      "default": "classification",
      "required": false
    },
    "include_confidence": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "include_reasoning": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "api_key": {
      "type": "string",
      "description": "Use ${ENV_VAR_NAME} syntax for environment variables",
      "required": false
    },
    "temperature": {
      "type": "number",
      "default": 0.1,
      "required": false
    },
    "description": {
      "type": "string",
      "required": false
    },
    "group_name": {
      "type": "string",
      "required": false
    }
  },
  "tags": [
    "ai",
    "llm",
    "nlp"
  ]
}