{
  "type": "dagster_component_templates.TicketClassifierComponent",
  "name": "Ticket Classifier",
  "category": "ai",
  "description": "Classify support tickets by category, priority, and sentiment",
  "icon": "Ticket",
  "attributes": {
    "asset_name": {
      "type": "string",
      "description": "Name of the asset that will hold classified ticket data",
      "required": true
    },
    "method": {
      "type": "string",
      "description": "Classification method: llm (GPT/Claude) or transformer (BERT, RoBERTa)",
      "default": "llm",
      "enum": [
        "llm",
        "transformer"
      ],
      "required": false
    },
    "llm_provider": {
      "type": "string",
      "description": "LLM provider (required for method=llm)",
      "enum": [
        "openai",
        "anthropic"
      ],
      "required": false
    },
    "llm_model": {
      "type": "string",
      "description": "LLM model name (required for method=llm)",
      "required": false
    },
    "transformer_model": {
      "type": "string",
      "description": "Transformer model name (for method=transformer)",
      "required": false
    },
    "api_key": {
      "type": "string",
      "description": "API key for LLM method. Use ${OPENAI_API_KEY} or ${ANTHROPIC_API_KEY} for environment variables",
      "required": false
    },
    "input_column": {
      "type": "string",
      "description": "Column name containing ticket text",
      "default": "ticket_text",
      "required": false
    },
    "categories": {
      "type": "string",
      "description": "Comma-separated list of ticket categories",
      "default": "technical,billing,account,product,general,other",
      "required": false
    },
    "urgency_levels": {
      "type": "string",
      "description": "Comma-separated list of urgency levels",
      "default": "low,medium,high,critical",
      "required": false
    },
    "departments": {
      "type": "string",
      "description": "Comma-separated list of departments for routing (optional)",
      "required": false
    },
    "classify_sentiment": {
      "type": "boolean",
      "description": "Include sentiment classification (positive, neutral, negative)",
      "default": true,
      "required": false
    },
    "include_confidence": {
      "type": "boolean",
      "description": "Include confidence scores for classifications",
      "default": true,
      "required": false
    },
    "include_reasoning": {
      "type": "boolean",
      "description": "Include reasoning/explanation for classifications (LLM only)",
      "default": false,
      "required": false
    },
    "multi_label": {
      "type": "boolean",
      "description": "Allow multiple categories per ticket",
      "default": false,
      "required": false
    },
    "confidence_threshold": {
      "type": "number",
      "description": "Minimum confidence threshold. Below this = 'uncertain'",
      "minimum": 0.0,
      "maximum": 1.0,
      "required": false
    },
    "batch_size": {
      "type": "integer",
      "description": "Batch size for processing",
      "default": 50,
      "minimum": 1,
      "required": false
    },
    "temperature": {
      "type": "number",
      "description": "Temperature for LLM (0.0 = deterministic)",
      "default": 0.0,
      "minimum": 0.0,
      "maximum": 2.0,
      "required": false
    },
    "max_tokens": {
      "type": "integer",
      "description": "Max tokens for LLM response",
      "default": 200,
      "required": false
    },
    "rate_limit_delay": {
      "type": "number",
      "description": "Delay in seconds between API calls",
      "default": 0.1,
      "minimum": 0.0,
      "required": false
    },
    "max_retries": {
      "type": "integer",
      "description": "Maximum retries for failed API calls",
      "default": 3,
      "minimum": 0,
      "required": false
    },
    "enable_caching": {
      "type": "boolean",
      "description": "Cache API responses to avoid redundant calls",
      "default": true,
      "required": false
    },
    "track_costs": {
      "type": "boolean",
      "description": "Track token usage and costs (LLM only)",
      "default": true,
      "required": false
    },
    "include_metadata_fields": {
      "type": "string",
      "description": "Comma-separated list of metadata fields to include in classification",
      "required": false
    },
    "description": {
      "type": "string",
      "description": "Asset description",
      "required": false
    },
    "group_name": {
      "type": "string",
      "description": "Asset group for organization",
      "default": "ticket_classification",
      "required": false
    },
    "include_sample_metadata": {
      "type": "boolean",
      "description": "Include sample data preview in metadata",
      "default": true,
      "required": false
    }
  },
  "tags": [
    "ai",
    "llm",
    "nlp"
  ]
}