{
  "type": "dagster_component_templates.FilesystemMonitorSensorComponent",
  "name": "Filesystem Monitor",
  "category": "sensors",
  "description": "Monitor a directory for new files and trigger jobs when files matching a pattern are detected",
  "icon": "FolderSearch",
  "x-dagster-io": {
    "component_type": "sensor",
    "triggers": {
      "type": "filesystem",
      "description": "Triggers when new files are detected in the monitored directory"
    },
    "outputs": {
      "type": "run_config",
      "description": "Passes file information (path, name, size, modified time) to triggered jobs via run_config"
    }
  },
  "attributes": {
    "sensor_name": {
      "type": "string",
      "required": true,
      "label": "Sensor Name",
      "description": "Unique name for this sensor",
      "placeholder": "filesystem_sensor"
    },
    "directory_path": {
      "type": "string",
      "required": true,
      "label": "Directory Path",
      "description": "Path to the directory to monitor for new files",
      "placeholder": "/data/incoming"
    },
    "file_pattern": {
      "type": "string",
      "required": false,
      "label": "File Pattern",
      "description": "Regex pattern to match files (e.g., '.*\\.csv$' for CSV files)",
      "default": ".*",
      "placeholder": ".*\\.csv$"
    },
    "job_name": {
      "type": "string",
      "required": true,
      "label": "Job Name",
      "description": "Name of the job to trigger when files are detected",
      "placeholder": "process_files_job"
    },
    "minimum_interval_seconds": {
      "type": "number",
      "required": false,
      "label": "Minimum Interval (seconds)",
      "description": "Minimum time between sensor evaluations",
      "default": 30,
      "minimum": 1,
      "placeholder": "30"
    },
    "recursive": {
      "type": "boolean",
      "required": false,
      "label": "Recursive",
      "description": "Whether to recursively search subdirectories",
      "default": false
    },
    "default_status": {
      "type": "string",
      "required": false,
      "label": "Default Status",
      "description": "Default status of the sensor",
      "default": "running",
      "enum": ["running", "stopped"],
      "enumLabels": {
        "running": "Running (sensor actively monitors)",
        "stopped": "Stopped (sensor is paused)"
      }
    }
  },
  "dependencies": {
    "pip": []
  },
  "tags": [
    "sensors",
    "filesystem",
    "monitoring",
    "automation"
  ]
}
